<resources>

    <style name="Base.Theme.AplikacjaProjektZespolowyPWr" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/onPrimary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="textFillColor">@color/onPrimary</item>
    </style>

    <style name="Theme.AplikacjaProjektZespolowyPWr" parent="Base.Theme.AplikacjaProjektZespolowyPWr" />

    <style name="Widget.AplikacjaProjektZespolowyPWr.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/gradient_button</item>
    </style>

    <style name="Widget.AplikacjaProjektZespolowyPWr.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxBackgroundColor">@color/background</item>
        <item name="hintTextColor">@color/label_color</item>
        <item name="boxStrokeErrorColor">@color/red_error</item>
        <item name="errorTextColor">@color/red_error</item>
        <item name="startIconTint">@color/onBackground</item>
        <item name="endIconTint">@color/onBackground</item>
    </style>

    <style name="KeypadButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="GradientSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/gradient_border</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>