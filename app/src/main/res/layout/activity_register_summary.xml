<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.auth.RegisterSummaryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:contentDescription="@string/user_icon"
                android:src="@drawable/user_icon_2" />

            <TextView
                android:id="@+id/nameSummaryMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/text"
                android:text="@string/name"
                android:fontFamily="@font/rowdies"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/nameSummaryEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/text"
                android:text="@string/name"
                android:fontFamily="@font/rowdies"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lastnameSummaryMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/text"
                android:text="@string/lastname"
                android:fontFamily="@font/rowdies"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lastnameSummaryEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/text"
                android:text="@string/lastname"
                android:fontFamily="@font/rowdies"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/emailSummaryMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/text"
                android:text="@string/email"
                android:fontFamily="@font/rowdies"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/emailSummaryEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/text"
                android:text="@string/email"
                android:fontFamily="@font/rowdies"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/phoneSummaryMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/text"
                android:text="@string/phone"
                android:fontFamily="@font/rowdies"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/phoneSummaryEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/text"
                android:text="@string/phone"
                android:fontFamily="@font/rowdies"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/licenseNumberSummaryMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/text"
                android:text="@string/license_number"
                android:fontFamily="@font/rowdies"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/licenseNumberSummaryEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/text"
                android:text="@string/license_number"
                android:fontFamily="@font/rowdies"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/licenseExpSummaryMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/text"
                android:text="@string/license_exp"
                android:fontFamily="@font/rowdies"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/licenseExpSummaryEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/text"
                android:text="@string/license_exp"
                android:fontFamily="@font/rowdies"
                android:textSize="20sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/registerButton"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/rowdies"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="80dp"
                android:paddingVertical="10dp"
                android:text="@string/register"
                android:textAllCaps="true"
                app:cornerRadius="5dp"
                tools:ignore="TextContrastCheck,VisualLintButtonSize" />

        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/main"
        android:layout_width="match_parent"
        android:elevation="1dp"
        android:layout_height="match_parent"
        android:background="@drawable/wave_up_mini">

        <TextView
            android:id="@+id/summaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/text"
            android:textAlignment="center"
            android:text="@string/summary"
            android:fontFamily="@font/rowdies"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="28sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>